.shopcart{
  padding-bottom:100rpx;
}
.shopcart-header{
  height: 80rpx;
  background-color: #fff;
  padding:0 20rpx;
  display: flex;
  justify-content: flex-end;
  position: sticky;
  top:0;
}
.manage{
  font-size: 28rpx;
  line-height: 80rpx;
  color:#444;
}
.pro-items{
  margin-top: 20rpx;
}
.pro-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding:20rpx;
  margin-bottom:20rpx;
}
.pro-fl{
  display: flex;
  justify-content: flex-start;
}
.checkbox{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-top:46rpx;
  margin-right: 20rpx;
  border:1px solid #ccc;
  border-radius: 50%;
}
.pro-img{
  width: 140rpx;
}
.pro-text{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;

  text-align: left;
}
.pro-name{
  font-size: 28rpx;
  color:#444;
}
.pro-rule{
  font-size: 24rpx;
  color:#6a6a6a;
}
.price-count-box{
  display: flex;
}
.price-count{
  display: flex;
  justify-content: flex-start;
  align-self: center;
}
.price{
  font-size: 28rpx;
  color:#165dad;
  line-height: 48rpx;
  margin-right: 40rpx;
}
.icon{
  width: 48rpx;
  height: 48rpx;
  
}
.count{
  text-align: center;
  line-height: 48rpx;
  font-size: 28rpx;
  color:#165dad;
  width: 60rpx;
}
.icon-img{
  height: 48rpx;
}
.p-c{
  display: none !important;
}
.bottom-box{
  position: fixed;
  left: 0;
  bottom:0;
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  width: 100%;
  background-color: #fff;
  padding-left: 20rpx;
}
.bottom-fl,.bottom-fr{
  display: flex;
  flex-direction: row;
}
.all-check{
  width:48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-top:26rpx;
  border:1px solid #ccc;
  border-radius: 50%;
}
.all-text{
  line-height: 100rpx;
  margin-left: 20rpx;
  color:#165dad;
  font-size: 28rpx;
}
.bottom-fr{
  color:#165dad;
  line-height: 100rpx;
}
.text{
  font-size: 24rpx;
}
.text-price{
  font-size: 32rpx;
  font-weight: bold;
}
.buy-btn{
  padding:0 40rpx;
  background-color: #165dad;
  color:#fff;
  font-size: 28rpx;
  line-height: 100rpx;
  margin-left: 40rpx;
}
.delete{
  width:48rpx;
  height: 48rpx;
  display: flex;

}
.all-delete{
  padding:0 40rpx;
  line-height: 100rpx;
  color:#fff;
  background-color: #89AFD6;
  font-size: 28rpx;
}

.no-data{
  text-align: center;
  vertical-align: middle;
  color:#444;
}