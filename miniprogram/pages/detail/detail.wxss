
.detail{
  padding-bottom:160rpx;
  background-color:#f5f5f5;
}
.detail-box{
  padding:0 20rpx;
  background-color: #fff;
}
.pro{
  display: flex;
  justify-content: space-between;
  padding:20rpx 0;
}
.pro-name{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #165dad;
}
.pro-like{
  width: 60rpx;
  height: 60rpx;
}
.pro-rule-item{
  display: flex;
  justify-content: flex-start;
  margin-top:30rpx;
}
.pro-rule-item:first-child{
  margin-top: 0;
}
.pro-rule-title{
  width: 100rpx;
  font-size: 32rpx;
  color: #000000;
  font-weight: 400;
  line-height: 60rpx;
}
.rule-value{
  display: flex;
  justify-content: flex-start;
}
.rule-item{
  width:140rpx;
  height: 60rpx;
  line-height: 60rpx;
  /* padding:5rpx 0; */
  margin:0 10rpx;
  display: inline-block;
  text-align: center;
  color:#6a6a6a;
  background: #e0e0e0;
  font-size: 28rpx;
  border-radius: 50rpx;
}
.rule-item.active{
  background-color: #89AFD6;
  color:#fff;
}
.desc{
  padding: 20rpx 0;
  border-top: 1rpx solid #e8e8e8;
  border-bottom: 1rpx solid #e8e8e8;

  margin-top:30rpx;
}
.desc-title{
  font-size: 28rpx;
  color: #444;
  margin-bottom: 20rpx;
}
.desc-text{
  font-size: 24rpx;
  color: #6a6a6a;
  margin-bottom: 10rpx;
}

.desc-text:last-child{
  margin-bottom: 0;
}
.price-count{
  display: flex;
  justify-content: space-between;
  padding:20rpx 0;
}
.price{
  color: #165dad;
  font-size: 28rpx;
  line-height: 40rpx;
}
.operate{
  display: flex;
  justify-content: flex-start;
  vertical-align: middle;
}
.price-img{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.count{
  margin: 0 20rpx;
  width: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #165dad;
}
.buy-btn{
  position: fixed;
  bottom:0;
  right: 0;
  display: flex;
  justify-content: flex-end;
  height: 120rpx;
  width: 100%;
  background-color: #fff;
}
.buy-btn view{
  padding:0 20rpx;
  height: 100%;
  line-height: 120rpx;
  color:#fff;
  font-weight: 32rpx;
}
.shopcart{
  background-color: #4083D6;
}
.buy{
  background-color: #165DAD;
}
