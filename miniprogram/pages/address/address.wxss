.address{
  padding-bottom:120rpx;
}
.address-items{
  background-color: #fff;
}
.address-item{
  padding:20rpx;
  border-bottom: 1px solid #e8e8ee;
}
.address-info{
  display: flex;
  justify-content: flex-start;
}
.person-name{
  width: 160rpx;
  font-size: 28rpx;
  color:#444;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.person-phone{
  width: 160rpx;
  font-size: 24rpx;
  color:#444;
  text-align: center;
  margin-right: 20rpx;
  line-height: 40rpx;
}
.tag{
  width: 60rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  background-color: #468EE5;
  color:#fff;
  text-align: center;
  margin-right: 20rpx;
}
.tag:last-child{
  margin-right: 0;
}
.default{
  background-color: #e4393c;
}
.person-address{
  display: flex;
  justify-content: space-between;
  margin-top:20rpx;
}
.detail-address{
  line-height: 48rpx;
  font-size: 24rpx;
  color:#6a6a6a;
}
.icon{
  width: 48rpx;
  height: 48rpx;
  margin-right: 40rpx;
}
.icon:last-child{
  margin-right: 0;
}
.icon-btn{
  display: flex;
  justify-content: flex-start;
}
.new{
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #1F6FCB;
  color:#fff;
  font-size: 32rpx;
}